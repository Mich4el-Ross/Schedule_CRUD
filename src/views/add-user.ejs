  <main id="main-section">
    <div class="container">

        <div class="form-title text-center">

            <h2 class="text-dark"> <% if (!users._id) { %> Create <% } else { %> Edit <% } %>  User Area</h2>


            <span class="text-light">
                Use the below form to <% if (!users._id) { %> create <% } else { %> edit <% } %> your user  
            </span>

        </div>

        <% if (users._id) { %>
        <form action="/add-user/edit/<%= users._id %>" method="POST" id="update_user">
        <% } else { %>
        <form action="/add-user/register" method="POST" id="add_user">
        <% } %>

            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <div class="new_user">

                <div class="form-group">
                    <label for="Name" class="text-light">Name</label>
                    <input type="text" name="name" value="<%= users.name %>" placeholder="Jane" id="Name">
                </div>

                <div class="form-group">
                    <label for="MiddleName" class="text-light">Middle Name</label>
                    <input type="text" name="middlename" value="<%= users.middlename %>" placeholder="Doe" id="MiddleName">
                </div>

                <div class="form-group">
                    <label for="Email" class="text-light">Email</label>
                    <input type="email" name="email" value="<%= users.email %>" placeholder="example@gmail.com" id="Email">
                </div>

                <div class="form-group">
                    <label for="Phonenumber" class="text-light">Phone Number</label>
                    <input type="tel" name="phonenumber" value="<%= users.phonenumber %>" placeholder="XX XXXXX XXXX" id="Phonenumber" maxlength="11">
                </div>

                <div class="form-group">

                    <label for="gender" class="text-light">Gender</label>
                    
                    <div class="radio inline">
                        <input type="radio" id="radio-2" name="gender" value="Male" <% if (users.gender === 'Male') { %>
                         checked
                        <% } %> >
                        <label for="radio-2" class="radio-label">Male</label>
                    </div>

                    <div class="radio inline">
                        <input type="radio" id="radio-3" name="gender" value="Female" <% if (users.gender === 'Female') { %>
                            checked
                           <% } %> > 
                        <label for="radio-3" class="radio-label">Female</label>
                    </div>

                </div>
            
                <div class="form-group">
                    <button type="submit" class="btn text-dark update"> 
                        <% if (!users._id) { %> Create <% } else { %> Update <% } %>     
                    </button>
                </div>
        
            </div>
        </form>
       
    </div>
</main>

